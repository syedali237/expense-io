{
    "compilerOptions": {
      /* Language and Environment */
      "target": "ES2020",                       
      "module": "ESNext",                       
      "lib": ["ES2020"],                        
      "moduleResolution": "node",              
      "allowSyntheticDefaultImports": true,    
      "esModuleInterop": true,                  
      "forceConsistentCasingInFileNames": true, 
      "skipLibCheck": true,                     
      "allowImportingTsExtensions": true,
      "noEmit": true,
  
      /* Modules */
      "rootDir": ".",                           /* Source files location (current directory) */
      "outDir": "./dist",                       /* Compiled files location */
  
      /* JavaScript Support */
      "allowJs": true,                         
      "resolveJsonModule": true,               
  
      /* Emit */
      "sourceMap": true,                       
      "removeComments": true,                  
  
      /* Type Checking */
      "strict": true,                          
      "noImplicitAny": true,                   
      "strictNullChecks": true,                
      "noUnusedLocals": true,                  
      "noUnusedParameters": true,              
  
      /* TypeRoots */
      "typeRoots": ["./node_modules/@types"],  
      "types": ["node"]                        
    },
    "include": ["./**/*.ts"],                   /* Include all TypeScript files in the current directory and subdirectories */
    "exclude": ["node_modules", "dist"]         /* Exclude node_modules and output directory */
  }
  